{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "target": "esnext",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es6", "es5"],
    "types": ["node", "express", "mocha", "webpack-env"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/components/TurniloComponent/**/*"],
  "exclude": [
    "node_modules",
    // "**/*.mocha.ts",
    // "**/*.mocha.tsx",
    "**/*.json",
    "turnilo"
  ]
}
