{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "importHelpers": true,
    "lib": ["es2016", "dom"],
    "target": "es5",
    "module": "es6",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@project/app/modules/*": [
          "../client/app/components/TurniloComponent/client/*"
      ],
  },
  },
  "include": [
    "typings/private.d.ts",
    "src/**/*.ts",
    "../client/app/components/TurniloComponent/client/**/*.ts"
  ]
}
