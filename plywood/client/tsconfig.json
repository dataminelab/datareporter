{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "importHelpers": true,
    "lib": ["es2016", "dom"],
    "target": "es5",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    //"allowJs": true,
    "paths": {
      "utils": ["dist/src/helper/utils/"],
    },
    },
  "include": [
    "typings/private.d.ts",
    "src/**/*.ts",
    "../client/app/components/TurniloComponent/client/"
  ],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}
